<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="Base.Theme.AppVariazioniScolastiche" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="switchStyle">@style/Theme.AppVariazioniScolastiche.Switch</item>
        <item name="chipStyle">@style/Theme.AppVariazioniScolastiche.Chip</item>
    </style>

    <style name="Theme.AppVariazioniScolastiche" parent="Base.Theme.AppVariazioniScolastiche" />

    <style name="Theme.AppVariazioniScolastiche.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="trackTint">@color/primary_color_light</item>
        <item name="thumbTint">@color/switch_thumb_selector</item>
    </style>

    <style name="Theme.AppVariazioniScolastiche.Chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>